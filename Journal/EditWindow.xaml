<Window x:Class="MyJournal.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyJournal"
        mc:Ignorable="d"
        Title="EditWindow" Height="300" Width="300">
    <Grid>
        <DatePicker x:Name="datePicker_EntryDate" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="29" Width="105"/>
        <TextBox x:Name="textBox_EditEntry" HorizontalAlignment="Left" Height="184" Margin="10,75,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="272"/>
        <Button x:Name="button_SaveChanges" Content="Save Changes" HorizontalAlignment="Left" Margin="187,10,0,0" VerticalAlignment="Top" Width="95" Height="29" Click="button_SaveChanges_Click"/>
        <TextBox x:Name="textBox_EditTitle" HorizontalAlignment="Left" Height="26" TextWrapping="Wrap" VerticalAlignment="Top" Width="272" Margin="10,44,0,0"/>

    </Grid>
</Window>
